<div class="col-md-12">
  <div class="group">
    <%= link_to("New Movie", new_movie_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td> # </td>
        <td> Movie Name </td>
        <td> Description </td>
        <td> Creator </td>
        <td colspan="2"> Method </td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td>#</td>
          <td><%= link_to(movie.name, movie_path(movie)) %></td>
          <td><%= movie.description %></td>
          <td><%= movie.created_at %></td>
          <td>
              <%= link_to("Edit", edit_movie_path(movie), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", movie_path(movie), class: "btn btn-sm btn-default",
                  method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
