<div class="col-md-12">
  <h2 class="text-center"> My Join </h2>
    <table class="table">
      <thead>
        <tr>
          <th> # </th>
          <th> 影片名称 </th>
          <th> 影片描述 </th>
          <th> 评论数 </th>
          <th> 评论时间 </th>
          <th> 更新时间 </th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td> # </td>
            <td><%= link_to(movie.name, movie_path(movie)) %></td>
            <td><%= movie.description %></td>
            <td><%= movie.reviews.count %></td>
            <td><%= movie.created_at %></td>
            <td><%= movie.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
